-posts ||= @posts || @collection
-posts.each do |post|
  %li{:id => post.dom_id}
    = post_item(post)
    .red-line

-if posts.respond_to?(:per_page) and posts.size == posts.per_page
  - url_opts = {:page => posts.current_page+1}
  %li#more_posts_btn
    =link_to ttt(:'.more'), url_for(url_opts.update(:format => 'js')), {:href => url_for(url_opts), :id => "fetch_next_page", :remote => true}
