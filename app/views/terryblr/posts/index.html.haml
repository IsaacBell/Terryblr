%h2 Archives

%ul.archives
  - @collection.each do |p|
    %li{ :id => p.dom_id }
      -link_to(post_path(p, p.slug), :style => p.photos.empty? ? "" : "background-image:url(#{p.photos.first.image.url(:thumb)})") do
        %div.date-overlay=p.published_at.to_s(:month_and_day_ordinal)
        %span=p.title? ? p.title : strip_tags(p.body)
        
  -if @collection.respond_to?(:per_page) and @collection.size == @collection.per_page
    - url_opts = {:page => @collection.current_page+1}
    %li#more_posts_btn
      =link_to_remote "More", {:url => url_for(url_opts.update(:format => 'js'))}, {:href => url_for(url_opts), :id => "fetch_next_page"}
