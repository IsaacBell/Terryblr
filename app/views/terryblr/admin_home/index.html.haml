- today = Date.today
- @date ||= today
- content_for :pre_head do
  // Must be loaded before jQuery
  = javascript_include_tag 'raphael-min.js', 'raphael.path.methods.js', 'raphael.pie.js'
- content_for :head do
  = javascript_include_tag 'raphael.analytics.js'
  
- content_for :sidebar do
  %h2
    / - link_to edit_admin_user_path(current_user) do
    /   = current_user.full_name
    /   %span #{ttt :'.edit'}

  %ul.summary
    %li.divider
    %li.home
      = image_tag "admin/dashboard_controls_open.png"
      =link_to Settings.domain, root_path
    %li.posts-count
      = image_tag "admin/dashboard_controls_posts.png"
      = link_to ttt(:'.x_posts', :count => Terryblr::Post.published.count), admin_posts_path
    %li.drafts-count
      = image_tag "admin/dashboard_controls_drafts.png"
      = link_to ttt(:'.x_drafts', :count => Terryblr::Post.drafted.count), admin_posts_path(:state => "drafted")
    %li.divider

= render :partial => "terryblr/admin/content_nav"

#dashboard
  %p.loading #{image_tag("admin/dashboard-indicator.gif")} Loading Analytics...
  = javascript_tag "$.get('#{admin_analytics_path(:format => "js")}')"